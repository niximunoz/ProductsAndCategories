@{
    ViewData["Title"] = "Home Page";
}
@model Category
<div class="container">
    <div class="row">
        <div class="col">
            <h1>New Category</h1>
            <form method="POST" asp-controller="Home" asp-action="NewCategory">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"> Name: </label>
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="form-text"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <div class="col">
            <h1>All Categories</h1>
            <ul class="list-group">
                @foreach (var category in ViewBag.AllCategories)
                {
                    <li class="list-group-item">
                        <a asp-action="Category" asp-route-id_category="@category.CategoryId">@category.Name</a>
                    </li>
                }
            </ul>

        </div>
    </div>
</div>
